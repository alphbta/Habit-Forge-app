<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_gradient_orange_item"
    android:padding="0dp"
    android:minHeight="90dp">

    <TextView
        android:id="@+id/equipmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="1dp"
        android:text="Название снаряжения"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/imageEquipment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/equipmentTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/long_sword" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        app:layout_constraintTop_toBottomOf="@id/imageEquipment"
        app:layout_constraintStart_toStartOf="@id/imageEquipment"
        app:layout_constraintEnd_toEndOf="@id/imageEquipment">
        <TextView
            android:id="@+id/equipmentMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="стоимость"
            android:textSize="14sp" />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/Money" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>