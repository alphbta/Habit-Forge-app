<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigationMenu"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#A4A8A6"
    android:padding="16dp"
    android:clickable="true">

    <TextView
        android:id="@+id/menuTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Задания"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:padding="12dp"/>

    <TextView
        android:id="@+id/menuShop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Магазин"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:padding="12dp"/>

    <TextView
        android:id="@+id/menuInventory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Инвентарь"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:padding="12dp"/>

    <TextView
        android:id="@+id/menuQuests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Квесты"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:padding="12dp"/>

    <TextView
        android:id="@+id/menuAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Аккаунт"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:padding="12dp"/>

    <TextView
        android:id="@+id/menuHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Помощь"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:padding="12dp"/>
</LinearLayout>
