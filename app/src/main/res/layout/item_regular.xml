<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_box_tasks_item"
    android:padding="0dp"
    android:minHeight="90dp">
    >

    <View
        android:id="@+id/difficultyStripe"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:background="@drawable/normal_default"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="13dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="@id/difficultyStripe"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/complete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/holo_red_dark"
            android:text=""
            android:contentDescription="Отметить как выполнено" />
    </FrameLayout>

    <TextView
        android:id="@+id/regularTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:text="Название дела"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/difficultyStripe"
        />
    <TextView
        android:id="@+id/regularNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Подробности"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/regularTitle"
        app:layout_constraintStart_toStartOf="@id/regularTitle"
        app:layout_constraintEnd_toEndOf="@id/regularTitle" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginStart="56dp"
        app:layout_constraintTop_toBottomOf="@id/regularNote"
        app:layout_constraintStart_toStartOf="@id/regularTitle"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:id="@+id/regularDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пн"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <FrameLayout
            android:layout_width="24dp"
            android:layout_height="24dp">

            <View
                android:id="@+id/statCircle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/intelligence_default" />

<!--            <ImageView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:src="@drawable/ic_menu"-->
<!--                android:scaleType="centerInside" />-->
        </FrameLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>